@{
  Layout = "_Layout";
}
@model Factory.Models.Engineer
<h1 class="text-5xl font-bold border-b pb-4 text-darkGrayishBlue">Edit Engineer <span
    class="text-brightRed">@Model.Name</span></h1>
<div class="w-1/2 flex flex-col items-center shadow-inner">
  @using (Html.BeginForm(FormMethod.Post, new { @class = "text-lg text-center flex flex-col py-5"}))
  {
    @Html.HiddenFor(model => model.EngineerId)
    <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class="text-red-500 font-bold"})</p>
    <div class="py-3 space-x-3 space-y-3 flex flex-col items-center">
      @Html.LabelFor(model => model.Name, new {@class=" font-semibold"})
      @Html.TextBoxFor(model => model.Name, new { @class="py-1 text-sm rounded-xl text-center border shadow-inner outline-slate-200 text-slate-700 w-full"})
    </div>
    <p>@Html.ValidationMessageFor(model => model.SpecialtyMachine, "", new { @class="text-red-500 font-bold"})</p>
    <div class="py-3 space-x-3 space-y-3 flex flex-col items-center">
      @Html.Label("Specialty Machine", null, new {@class=" font-semibold"}) 
      @Html.TextBoxFor(model => model.SpecialtyMachine, new { @class="py-1 text-sm rounded-xl text-center border shadow-inner outline-slate-200 text-slate-700 w-full"})
    </div>
    <p>@Html.ValidationMessageFor(model => model.LicenseRenewalDate, "", new { @class="text-red-500 font-bold"})</p>
    <div class="py-3 space-x-3 space-y-3 flex flex-col items-center">
      @Html.Label("License Renewal Date", null, new {@class=" font-semibold"})
      @Html.TextBoxFor(model => model.LicenseRenewalDate, new {type="date", @class="py-1 text-sm rounded-xl text-center border shadow-inner outline-slate-200 text-slate-700 w-full"})
    </div>
    <div class="py-3 space-x-3 space-y-3 flex flex-col items-center">
      @Html.LabelFor(model => model.Location, new {@class=" font-semibold"})
      @Html.DropDownList("LocationId", null, new { @class="py-1 text-sm rounded-xl text-center border shadow-inner outline-slate-200 text-slate-700 w-full"})
    </div>
    <div class="py-3">
      <input type="submit" value="Update"
      class="px-3 py-1 text-sm shadow-md text-white rounded-full bg-brightRedLight font-semibold hover:text-black hover:bg-brightRedSuperLight focus:outline-none hover:cursor-pointer"/>
    </div>
  }
</div>