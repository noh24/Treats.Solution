<footer class="sticky top-[100vh] mt-24 mx-auto flex justify-center gap-3 px-4 py-2 items-center bg-veryDarkBlue text-white">
  <div class="flex flex-col-reverse justify-between px-6 py-10 mx-auto space-y-8 md:flex-row md:space-y-0 md:space-x-10">
    <!-- Logo and social links -->
    <div class="flex flex-col-reverse items-center justify-between space-y-12 md:flex-col md:space-y-12 md:items-start">
      <div class="mx-auto my-6 text-center text-white md:hidden">Copy &copy; 2022, All Rights Reserved</div>
      <!-- Logo -->
      <div>
        <img src="~/assets/images/logo.svg" class="h-8 md:-mt-12" alt="manage logo">
      </div>
      <!-- Social Links Container -->
      <div class="flex justify-center space-x-4">
        <!-- Link 1 -->
        <a href="#">
          <img src="./../assets/images/icon-facebook.svg" class="h-8" alt="">
        </a>
        <!-- Link 2 -->
        <a href="#">
          <img src="./../assets/images/icon-youtube.svg" class="h-8" alt="">
        </a>
        <!-- Link 3 -->
        <a href="#">
          <img src="./../assets/images/icon-twitter.svg" class="h-8" alt="">
        </a>
        <!-- Link 4 -->
        <a href="#">
          <img src="./../assets/images/icon-pinterest.svg" class="h-8" alt="">
        </a>
        <!-- Link 5 -->
        <a href="#">
          <img src="./../assets/images/icon-instagram.svg" class="h-8" alt="">
        </a>
      </div>
    </div>
    <!-- List Container -->
    <div class="flex justify-around space-x-24">
      <div class="flex flex-col space-y-3 text-white">
        <p class="hover:text-brightRed">@Html.ActionLink("Home", "Index", "Home")</p>
        <p class="hover:text-brightRed">@Html.ActionLink("Locations", "Index", "Locations")</p>
      </div>
      <div class="flex flex-col space-y-3 text-white">
        <p class="hover:text-brightRed">@Html.ActionLink("Engineers", "Index", "Engineers")</p>
        <p class="hover:text-brightRed">@Html.ActionLink("Machines", "Index", "Machines")</p>
      </div>
    </div>
    <!-- Input Container -->
    <div class="flex flex-col justify-between">
      <form action="">
        <div class="flex space-x-3">
          <input type="text" class="flex-1 text-center text-sm px-4 rounded-full focus:outline-none focus:text-black" placeholder="Update in your inbox">
          <button class="px-6 py-2 text-sm text-white hover:text-black font-semibold rounded-full bg-brightRed hover:bg-brightRedSuperLight focus:outline-none">Go</button>
        </div>
      </form>
      <div class="hidden text-white md:block">Copyright &copy; 2023, All Rights Reserved</div>
    </div>
  </div>
</footer>